<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:backgroundTintMode="screen"
    android:background="#7f00107b">

    <TextView
        android:id="@+id/NumberofSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/num_steps"
        android:minHeight="40dp"
        android:typeface="sans"
        android:textSize="36sp"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="#ffffe70c"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Distance"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/Distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        android:minHeight="40dp"
        android:typeface="sans"
        android:textSize="36sp"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="#ffffe70c"
        android:gravity="right"
        android:layout_below="@+id/NumberofSteps"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:text="@string/reset_label"
        android:enabled="false"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/Distance"
        android:layout_toEndOf="@+id/num_steps_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/num_steps_label"
        android:id="@+id/num_steps_label"
        android:textColor="#ffff1b65"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/NumberofSteps"
        android:layout_above="@+id/distance_label"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_medium_material" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/distance_label_metric"
        android:id="@+id/distance_label"
        android:layout_alignParentStart="true"
        android:textColor="#ffff1b65"
        android:layout_alignTop="@+id/Distance"
        android:layout_alignBottom="@+id/Distance"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/time_start_label"
        android:id="@+id/time_start_label"
        android:textColor="#ffff1b65"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/elapsed_time_label"
        android:id="@+id/elapsed_time_label"
        android:textColor="#ffff1b65"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/time_start"
        android:id="@+id/time_start"
        android:textColor="#ffffe70c"
        android:layout_alignTop="@+id/time_start_label"
        android:layout_toEndOf="@+id/time_start_label" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/elapsed_time"
        android:id="@+id/elapsed_time"
        android:textColor="#ffffe70c"
        android:layout_alignTop="@+id/elapsed_time_label"
        android:layout_toStartOf="@+id/elapsed_time_label" />

</RelativeLayout>